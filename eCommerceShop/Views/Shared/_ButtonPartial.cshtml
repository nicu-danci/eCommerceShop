@model int

<td style="width: 150px">
    <div class="btn-group">
        <a asp-action="Edit" class="btn btn-primary" asp-rout-id="@Model">
            <i class="fas fa-edit"></i>
        </a>
            
        <a asp-action="Details" class="btn btn-success" asp-rout-id="@Model">
            <i class="fas fa-list-ul"></i>
        </a>
        
        <a asp-action="Delete" class="btn btn-danger" asp-rout-id="@Model">
            <i class="fas fa-trash-alt"></i>
        </a>
        
    </div>
</td>